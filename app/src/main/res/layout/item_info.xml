<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/product_img_item_adapter"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/price_name_item_adapter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/img_produc_adapter"
        android:src="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/product_name_item_adapter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/product_img_item_adapter"
        android:layout_toRightOf="@+id/product_img_item_adapter"
        android:padding="20dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/price_name_item_adapter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/product_name_item_adapter"
        android:layout_alignStart="@+id/product_name_item_adapter"
        android:layout_below="@+id/product_name_item_adapter"
        android:padding="20dp"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>